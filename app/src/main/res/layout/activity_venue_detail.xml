<!-- Layout for WordActivity.
 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="5dp">
    <TextView
        android:id="@+id/venueName"
        android:textSize="35dp"
        android:textColor="?android:textColorPrimary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/venueAddressLabel"
        android:textSize="18dp"
        android:textColor="?android:textColorSecondary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/address_label" />
    <TextView
        android:id="@+id/venueAddress"
        android:textSize="18dp"
        android:textColor="?android:textColorSecondary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/venuePhoneLabel"
        android:textSize="18dp"
        android:textColor="?android:textColorSecondary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/phone_label" />
    <TextView
        android:id="@+id/venuePhone"
        android:textSize="18dp"
        android:textColor="?android:textColorSecondary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/venueWorktimeLabel"
        android:textSize="18dp"
        android:textColor="?android:textColorSecondary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/worktime_label" />
    <TextView
        android:id="@+id/venueWorktime"
        android:textSize="18dp"
        android:textColor="?android:textColorSecondary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/make_reservation"
        android:id="@+id/reservationBtn"
        android:layout_gravity="center_horizontal" />
    <fragment android:layout_width="match_parent"
        android:layout_height="fill_parent" android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment" />
</LinearLayout>