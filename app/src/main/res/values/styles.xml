<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
   <!--<style name="AppTheme" parent="android:Theme.Holo.Light" >-->
        <!--<item name="android:background">#ffdfffb9</item>-->
        <item name="android:actionBarStyle">@style/AppTheme.ActionBarStyle</item>
        <item name="actionBarStyle">@style/AppTheme.ActionBarStyle</item>
    </style>

    <style name="AppTheme.ActionBarStyle" parent="@style/Widget.AppCompat.ActionBar">
        <item name="android:logo">@drawable/ic_launcher</item>
        <item name="android:displayOptions">useLogo|showHome|showTitle|showCustom</item>
        <item name="logo">@drawable/ic_launcher</item>
        <item name="displayOptions">useLogo|showHome|showTitle|showCustom</item>
        <item name="android:titleTextStyle">@style/AppTheme.ActionBar.TitleTextStyle</item>
        <item name="titleTextStyle">@style/AppTheme.ActionBar.TitleTextStyle</item>
    </style>
    <style name="AppTheme.ActionBar.TitleTextStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title" >
        <item name="android:textColor">#ff686868</item>
    </style>
    <style name="TextViewStyle" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#ff787878</item>
    </style>
    <style name="LabelStyle" parent="@style/TextViewStyle">
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:textColor">#ff585858</item>
    </style>
    <style name="EditTextStyle" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#ff787878</item>
    </style>
    <style name="LinkStyle" parent="@style/TextViewStyle">
        <item name="android:textColor">#ff59abf5</item>
    </style>
    <style name="PendingStyle" parent="@style/TextViewStyle">
        <item name="android:textColor">#fff</item>
        <item name="android:padding">2dp</item>
        <item name="android:background">#ffff8724</item>
    </style>
    <style name="AcceptedStyle" parent="@style/TextViewStyle">
        <item name="android:textColor">#fff</item>
        <item name="android:padding">2dp</item>
        <item name="android:background">#ff2a9b3a</item>
    </style>
    <style name="DeniedStyle" parent="@style/TextViewStyle">
        <item name="android:textColor">#fff</item>
        <item name="android:padding">2dp</item>
        <item name="android:background">#ff8d3222</item>
    </style>
    <style name="LayoutStyle" parent="@style/AppTheme">
        <item name="android:padding">10dp</item>
        <!--<item name="android:background">#aaff1900</item>-->
    </style>
</resources>
